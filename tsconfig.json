{
    "compilerOptions": {
      "target": "es6",
      "lib": ["es2019"],
      "rootDir": "src",
      "outDir": "dist",
      "module": "commonjs",
      "moduleResolution": "node",
      "strict": false,
      "declaration": true,
      "sourceMap": true,
      "inlineSources": true,
      "allowSyntheticDefaultImports": true,
    },
    "include": [
      "src/**/*", "test/**/*"
    ],
    "exclude": [
      "node_modules"
    ]
  }